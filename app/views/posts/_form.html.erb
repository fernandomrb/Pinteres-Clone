<%= simple_form_for @post do |f| %>

	<div class="form-group">
		<%= f.input :title, input_html: { class: 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.input :description, input_html: { class: 'form-control'} %>
	</div>

	<div class="form-group">
		<%= f.submit 'Agregar Post', class: 'btn btn-primary' %>
	</div>

<% end %>